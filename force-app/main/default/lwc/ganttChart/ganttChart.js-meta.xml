<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Dynamic Gantt Chart</masterLabel>
    <description>A configurable Gantt chart that allows users to select which objects and fields to display</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__Tab</target>
        <target>lightning__UtilityBar</target>
        <target>lightning__FlowScreen</target>
        <target>lightning__QuickAction</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage">
            <property name="height" type="String" default="500px" label="Chart Height" description="Height of the Gantt chart" />
            <property name="showFilters" type="Boolean" default="true" label="Show Filters" description="Show or hide filter controls" />
            <property name="showControls" type="Boolean" default="true" label="Show Controls" description="Show or hide navigation controls" />
            <property name="defaultZoom" type="String" default="month" label="Default Zoom Level" description="Initial zoom level">
                <valueList>
                    <value>day</value>
                    <value>week</value>
                    <value>month</value>
                    <value>quarter</value>
                    <value>year</value>
                </valueList>
            </property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>